<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:HyPrism.UI.ViewModels"
        xmlns:views="using:HyPrism.UI.Views"
        xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="800"
        x:Class="HyPrism.UI.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="HyPrism"
        Width="1280" Height="800"
        MinWidth="1024" MinHeight="700"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.Styles>
        <!-- Overlay Layer Animation -->
        <Style Selector="Grid.overlay-layer">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Grid.overlay-layer[Tag=True]">
            <Setter Property="Opacity" Value="1"/>
            <Setter Property="IsHitTestVisible" Value="True"/>
        </Style>
        
        <!-- Modal Content Animation (Scale + Fade) -->
        <Style Selector="Grid.modal">
             <Setter Property="Opacity" Value="0"/>
             <Setter Property="IsHitTestVisible" Value="False"/>
             <Setter Property="RenderTransform" Value="scale(0.95)"/>
             <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.2" Easing="CubicEaseOut"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.25" Easing="BackEaseOut"/>
                </Transitions>
             </Setter>
        </Style>
        <Style Selector="Grid.modal[Tag=True]">
             <Setter Property="Opacity" Value="1"/>
             <Setter Property="IsHitTestVisible" Value="True"/>
             <Setter Property="RenderTransform" Value="scale(1)"/>
        </Style>
    </Window.Styles>

    <Design.DataContext>
        <vm:MainViewModel/>
    </Design.DataContext>
    
    <Grid>
        <!-- Content Root with Blur Effect -->
        <Grid Tag="{Binding IsOverlayOpen}">
            <Grid.Styles>
                <Style Selector="Grid[Tag=True]">
                    <Setter Property="Effect" Value="blur(16)"/>
                </Style>
            </Grid.Styles>

            <!-- Background -->
            <Image Source="/Assets/bg_1.jpg" Stretch="UniformToFill"/>
        <Rectangle Fill="#CC090909"/> 
        
        <!-- Main Layout -->
        <Grid RowDefinitions="Auto, *, Auto" Margin="20" ColumnDefinitions="*, Auto">
            
            <!-- Header -->
            <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" ColumnDefinitions="Auto, *, Auto">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <!-- Profile Picture Placeholder -->
                    <Border Width="40" Height="40" CornerRadius="20" Background="{StaticResource HytaleOrangeBrush}" ClipToBounds="True">
                         <TextBlock Text=":)" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                                    FontWeight="Bold"/>
                    </Border>
                    <TextBlock Text="{Binding Nick}" VerticalAlignment="Center" FontSize="18" FontWeight="Bold" Foreground="White" Effect="drop-shadow(0 0 2 black)"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
                    <Button Command="{Binding ToggleSettingsCommand}" Background="Transparent" Padding="8" CornerRadius="8">
                        <svg:Svg Path="/Assets/Icons/settings.svg" Width="24" Height="24"/>
                    </Button>
                </StackPanel>
            </Grid>
            
            <!-- Central Content (Logo) -->
            <Grid Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="/Assets/logo.png" Width="400" Height="150" Stretch="Uniform"/>
            </Grid>
            
            <!-- News Panel -->
            <Border Grid.Row="1" Grid.Column="1" 
                    Width="350" 
                    Margin="20,0,0,0"
                    VerticalAlignment="Stretch"
                    Background="#CC111111" 
                    CornerRadius="12" 
                    BorderBrush="#33FFFFFF" 
                    BorderThickness="1"
                    IsVisible="{Binding !AppService.Configuration.DisableNews}">
                <Grid RowDefinitions="Auto, *">
                    <!-- News Header -->
                    <Border Grid.Row="0" Background="#111111" CornerRadius="12,12,0,0" Padding="15">
                        <Grid ColumnDefinitions="*, Auto">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <svg:Svg Path="/Assets/Icons/info.svg" Width="18" Height="18"/>
                                <TextBlock Text="News" FontSize="16" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button Grid.Column="1" 
                                    Command="{Binding RefreshNewsCommand}" 
                                    Background="Transparent" 
                                    Padding="6" 
                                    CornerRadius="6">
                                <svg:Svg Path="/Assets/Icons/refresh-cw.svg" Width="14" Height="14"/>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- News List -->
                    <ScrollViewer Grid.Row="1">
                        <ItemsControl ItemsSource="{Binding News}" Margin="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding $parent[Window].DataContext.OpenNewsLinkCommand}"
                                            CommandParameter="{Binding Url}"
                                            Background="Transparent"
                                            Padding="0"
                                            Margin="0,0,0,10"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Stretch">
                                        <Border Background="#252525" 
                                                CornerRadius="8" 
                                                Padding="12"
                                                BorderBrush="#333"
                                                BorderThickness="1">
                                            <Border.Styles>
                                                <Style Selector="Border:pointerover">
                                                    <Setter Property="Background" Value="#2a2a2a"/>
                                                    <Setter Property="BorderBrush" Value="#444"/>
                                                </Style>
                                            </Border.Styles>
                                            <StackPanel Spacing="6">
                                                <TextBlock Text="{Binding Title}" 
                                                           FontWeight="Bold" 
                                                           Foreground="White" 
                                                           FontSize="13"
                                                           TextWrapping="Wrap"
                                                           MaxLines="2"/>
                                                <TextBlock Text="{Binding Excerpt}" 
                                                           FontSize="11" 
                                                           Foreground="#999"
                                                           TextWrapping="Wrap"
                                                           MaxLines="3"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <Grid ColumnDefinitions="Auto, *">
                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding Date}" 
                                                               FontSize="10" 
                                                               Foreground="#666"/>
                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding Author}" 
                                                               FontSize="10" 
                                                               Foreground="#666"
                                                               HorizontalAlignment="Right"/>
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Footer Controls -->
            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Spacing="15" HorizontalAlignment="Center" Width="600">
                
                <!-- Status Info -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" IsVisible="{Binding IsDownloading}">
                    <TextBlock Text="{Binding ProgressText}" Foreground="White"/>
                    <TextBlock Text="{Binding DownloadSpeedText}" Foreground="Gray"/>
                </StackPanel>
                
                <!-- Progress Bar -->
                <ProgressBar Value="{Binding ProgressValue}" 
                             Maximum="100" 
                             Height="10" 
                             IsVisible="{Binding IsDownloading}"
                             Foreground="{StaticResource HytaleOrangeBrush}"
                             Background="{StaticResource HytaleDarkLightBrush}"/>
                
                <!-- Action Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Command="{Binding LaunchCommand}" 
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                            Height="50" FontSize="18" FontWeight="Bold"
                            Background="{StaticResource HytaleOrangeBrush}" Foreground="{StaticResource HytaleDarkBrush}"
                            CornerRadius="8" BorderThickness="0">
                        <Panel>
                            <StackPanel Orientation="Horizontal" Spacing="10" IsVisible="{Binding !IsDownloading}" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <svg:Svg Path="/Assets/Icons/play.svg" Width="20" Height="20">
                                    <svg:Svg.Css>* { stroke: #111 !important; fill: #111 !important; }</svg:Svg.Css>
                                </svg:Svg>
                                <TextBlock Text="PLAY" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="INSTALLING..." IsVisible="{Binding IsDownloading}"/>
                        </Panel>
                    </Button>
                    
                    <ComboBox Grid.Column="2" 
                              ItemsSource="{Binding Branches}" 
                              SelectedItem="{Binding SelectedBranch}"
                              VerticalAlignment="Stretch" Height="50" CornerRadius="8"
                              Background="#333" Foreground="White" BorderThickness="0"
                              Padding="15,0" VerticalContentAlignment="Center"/>
                              
                    <Button Grid.Column="4"
                            Command="{Binding OpenFolderCommand}"
                            VerticalAlignment="Stretch" Height="50" Width="50" CornerRadius="8"
                            Background="#333" Padding="0"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <svg:Svg Path="/Assets/Icons/folder.svg" Width="24" Height="24"/>
                    </Button>
                            
                    <Button Grid.Column="6"
                            Command="{Binding ToggleModsCommand}"
                            VerticalAlignment="Stretch" Height="50" Width="50" CornerRadius="8"
                            Background="#333" Padding="0"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <svg:Svg Path="/Assets/Icons/package.svg" Width="24" Height="24"/>
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>
        </Grid>

        <!-- Global Overlay Layer -->
        <Grid Classes="overlay-layer" Tag="{Binding IsOverlayOpen}">
            <!-- Dimmer Background -->
            <Border Background="#B3000000"/>
            
            <!-- Settings Overlay -->
            <Grid Classes="modal" Tag="{Binding IsSettingsOpen}">
                <views:SettingsView DataContext="{Binding SettingsViewModel}" Width="900" Height="650" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
            
            <!-- Mods Overlay -->
            <Grid Classes="modal" Tag="{Binding IsModsOpen}">
                <views:ModManagerView DataContext="{Binding ModManagerViewModel}" Width="1100" Height="750" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
    
</Window>
